@if (IsOpen)
{
    <FluentStack Orientation="Orientation.Vertical" Class="info-panel control" Width="250px">
        <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Top">
            <div style="width: 100%;"><FluentLabel Typo="Typography.PaneHeader">@Title</FluentLabel></div>
                <FluentButton Appearance="Appearance.Stealth" OnClick="Hide">
                    <FluentIcon Value="(new Icons.Regular.Size24.Dismiss())" />
                </FluentButton>
            </FluentStack>

            <FluentBodyContent>@ChildContent</FluentBodyContent>
        </FluentStack>


}



@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public bool IsOpen { get; set; } = false;

    public void Show()
    {
        IsOpen = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsOpen = false;
        StateHasChanged();
    }

    public void Toggle()
    {
        IsOpen = !IsOpen;
        StateHasChanged();
    }

}

