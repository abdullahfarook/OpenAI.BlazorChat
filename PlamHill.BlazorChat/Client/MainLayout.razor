@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader>
        Some Header Text
        <FluentSpacer />
        Aligned to the end
    </FluentHeader>

    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        

        <div>
            
                    <h3>System Message</h3>
                    <textarea class="textarea-fluent-ui"></textarea>
        </div>



        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />


@code{

    public static bool Expanded { get; set; } = true;

}